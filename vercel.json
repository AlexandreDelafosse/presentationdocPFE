{
  "version": 2,
  "builds": [
    {
      "src": "public", // Le dossier contenant les fichiers statiques, y compris index.html
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "/.*",
      "dest": "/index.html"
    }
  ],
  "hooks": {
    "prebuild": "npm install"
  }
}
